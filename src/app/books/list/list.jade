ss-navbar
  li.l-pull-right
    a.btn.btn-ghost.btn-solid(ng-href='#' aria-label="次のページへ")
      ng-md-icon(icon="navigate_next" size="24")
  li.l-pull-right
    a.btn.btn-ghost.btn-solid(ng-href='#' aria-label="前のページへ")
      ng-md-icon(icon="navigate_before" size="24")
  li.l-pull-right
    span.l-navbar-text 0-{{vm.books.length}} / 100 (P.{{vm.page}})

.container.l-clearfix
  .l-submenu.l-search-books
    form.ss-form
      h4.ss-form-header 検索条件
      .ss-input-wrapper
        label.ss-input-label タイトル
        input.ss-input(type="text")
      .ss-input-wrapper
        label.ss-input-label 著者
        input.ss-input(type="text")
      .ss-input-wrapper
        label.ss-input-label 更新日時
        input.ss-input(type="text")
      button.btn(type="button") 検索

  .l-simple-cards.l-books-list
      .l-simple-card.l-book(ng-repeat="book in vm.books" ng-click="vm.goToEdit(book.id)" ss-waves="block")
        img.simple-card-image(src="http://lorempixel.com/190/150/cats/3/")
        .simple-card-label-area
            .simple-card-label(ng-bind="book.title")

div(ng-include="'components/footer/footer.html'")
